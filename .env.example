# =============================================================================
# IZYSS — Variables d'environnement
# Copier ce fichier en .env.local et remplir les valeurs
# Ne jamais committer .env.local ou .env
# =============================================================================


# -----------------------------------------------------------------------------
# BASE DE DONNÉES — Neon (PostgreSQL + pgvector)
# https://neon.tech
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@ep-xxx.neon.tech/izyss?sslmode=require"


# -----------------------------------------------------------------------------
# AUTHENTIFICATION — Better Auth
# BETTER_AUTH_SECRET : chaîne aléatoire de 32 caractères minimum
# Générer avec : openssl rand -base64 32
# -----------------------------------------------------------------------------
BETTER_AUTH_SECRET="your-secret-32-chars-minimum"
BETTER_AUTH_URL="http://localhost:3000"


# -----------------------------------------------------------------------------
# SERVICE IA — FastAPI sur Railway
# AI_SERVICE_SECRET : clé partagée entre Next.js et FastAPI
# -----------------------------------------------------------------------------
AI_SERVICE_URL="https://izyss-ai.railway.app"
AI_SERVICE_SECRET="your-shared-secret-key"


# -----------------------------------------------------------------------------
# ANTHROPIC — Claude API (utilisé par le service FastAPI)
# https://console.anthropic.com
# Modèles disponibles : claude-opus-4-6 | claude-sonnet-4-5-20250929
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY="sk-ant-..."
CLAUDE_MODEL="claude-sonnet-4-5-20250929"


# -----------------------------------------------------------------------------
# CLOUDFLARE R2 — Stockage CVs et documents
# https://dash.cloudflare.com → R2
# -----------------------------------------------------------------------------
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="izyss-documents"
R2_PUBLIC_URL="https://documents.izyss.com"


# -----------------------------------------------------------------------------
# BREVO — Emails transactionnels et SMS candidats
# https://app.brevo.com → API Keys
# -----------------------------------------------------------------------------
BREVO_API_KEY="your-brevo-api-key"
BREVO_SENDER_EMAIL="noreply@izyss.com"
BREVO_SENDER_NAME="IZYSS"


# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# FastAPI
ENVIRONMENT="development"
LOG_LEVEL="INFO"
